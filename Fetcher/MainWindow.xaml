<Window x:Class="ImageSelector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="抽選者Beta" Height="600" Width="800"
        Background="#F6F6F6"
        AllowDrop="True" Drop="Window_Drop"
        MouseWheel="Window_MouseWheel"
        KeyDown="Window_KeyDown">
    <Grid>
        <StackPanel Name="HintArea" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock x:Name="HintTextBlock" 
                       Text="フォルダをここにドラッグ＆ドロップして開く" 
                       FontSize="16" 
                       Margin="0,0,0,10" 
                       HorizontalAlignment="Center"
                       Visibility="Visible"/> <!-- 默认可见 -->
        </StackPanel>
        
        <Image x:Name="RandomImage"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch" 
               RenderTransformOrigin="0.5,0.5"
               MouseDown="RandomImage_MouseDown"
               MouseMove="Window_MouseMove">
            <Image.RenderTransform>
                <TranslateTransform x:Name="ImageTranslateTransform" />
            </Image.RenderTransform>
        </Image>
        <StackPanel x:Name="SettingsPanel" Visibility="Collapsed" Background="#F9F9F9" 
                    HorizontalAlignment="Right" Width="200" Margin="0">
            <TextBlock Name= "SettingTittle" Text="設定" Margin="15" FontWeight="Bold" />
            <TextBlock Name="CacheSizeText" Text="キャッシュページ数:" Margin="15"/>
            <!-- 添加一个Slider -->
            <Slider x:Name="CacheSizeSlider" Minimum="1" Maximum="47" 
                    Value="10" TickFrequency="1" IsSnapToTickEnabled="True" 
                    Margin="10" ValueChanged="CacheSizeSlider_ValueChanged" />
            <TextBlock Name="BackgroundColor" Text="背景色:" Margin="15" />
            
            <!-- 重新排列背景色按钮为上三行下三行格式 -->
            <StackPanel Margin="15,5,15,5">
                <!-- 上三个按钮 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,5">
                    <Button Background="White" Width="30" Height="30" Margin="5,0" Click="SetBackgroundColor_Click" Tag="0" Focusable="false"/>
                    <Button Background="Black" Width="30" Height="30" Margin="5,0" Click="SetBackgroundColor_Click" Tag="1" Focusable="false"/>
                    <Button Background="#48384D" Width="30" Height="30" Margin="5,0" Click="SetBackgroundColor_Click" Tag="2" Focusable="false"/>
                </StackPanel>
                <!-- 下三个按钮 -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,5,0,0">
                    <Button Background="#E0112157" Width="30" Height="30" Margin="5,0" Click="SetBackgroundColor_Click" Tag="3" Focusable="false"/>
                    <Button Background="#C61D1D00" Width="30" Height="30" Margin="5,0" Click="SetBackgroundColor_Click" Tag="4" Focusable="false"/>
                    <Button Background="#E1504442" Width="30" Height="30" Margin="5,0" Click="SetBackgroundColor_Click" Tag="5" Focusable="false"/>
                </StackPanel>
            </StackPanel>
            
            <!-- 添加语言选择部分 -->
            <TextBlock Name="LanguageLabel" Text="言語:" Margin="15" />
            <!-- 将RadioButton替换为ComboBox下拉菜单 -->
            <ComboBox x:Name="LanguageComboBox" Margin="15,0,15,15" Focusable="false" SelectionChanged="LanguageComboBox_SelectionChanged">
                <ComboBoxItem Content="中文" Tag="0"/>
                <ComboBoxItem Content="English" Tag="1"/>
                <ComboBoxItem Content="日本語" Tag="2"/>
            </ComboBox>
        </StackPanel>
        <Canvas Name="MyCanvas">
            <StackPanel x:Name="PathButtonPanel" Orientation="Horizontal" HorizontalAlignment="Left" Margin="10">
                <!-- 动态生成的路径按钮将添加在这里 -->
            </StackPanel>
            
        </Canvas>
        <StackPanel x:Name="IndicatorPanel" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Visibility="Hidden">
            <!-- 圆点将会在这里动���添加 -->
        </StackPanel>
    </Grid>
</Window>

